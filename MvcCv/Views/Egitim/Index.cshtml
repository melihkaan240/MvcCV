@using MvcCv.Models.Entity
@model IEnumerable<TblEgitimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Eğitim listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt başlık 1</th>
        <th>Alt başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Baslik
            </td>
            <td>
                @item.AltBaslik1
            </td>
            <td>
                @item.AltBaslik2
            </td>
            <td>
                @item.Tarih
            </td>
            <td>
                @item.GNO
            </td>


            <td>
                <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@item.ID">
                    <i class="fas fa-trash">
                        Sil
                    </i>
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/Egitim/EgitimDuzenle/@item.ID">
                    <i class="btn btn-info btn-sm">
                        Düzenle
                    </i>
                </a>
            </td>
        </tr>

    }

</table>

<a href="/Egitim/EgitimEkle" class="btn btn-primary">Yeni Egitim bilgisi Ekle</a>


